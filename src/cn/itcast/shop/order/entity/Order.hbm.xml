<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.itcast.shop.order.entity.Order" table="orders">
		<id name="oid">
			<generator class="native"/>
		</id>
		<property name="total"/>
		<property name="ordertime"/>
		<property name="state"/>
		<property name="name"/>
		<property name="addr"/>
		<property name="phone"/>
		<!-- 关联关系:用户与订单是一对多关系 -->
		<many-to-one name="user" lazy="false" class="cn.itcast.shop.user.entity.User" column="uid"></many-to-one>
		<!-- 关联关系:订单与订单项是是一对多关系 -->
		<set name="orderItems" lazy="false" cascade="save-update">
			<key column="uid"></key>
			<one-to-many class="cn.itcast.shop.order.entity.OrderItem"/>
		</set>
		
		
	</class>
	
</hibernate-mapping>